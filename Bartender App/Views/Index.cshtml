@model IEnumerable<BartenderApp.Model.Drink>

<h2> Drink Menu <h2>

@foreach (var p in Model)
{
        <div class="well">
                    <h3>
                            <strong>@p.Name</strong>
                            <span class="pull-right label label-primary">a.Price.ToString("c")</span>
